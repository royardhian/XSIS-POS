<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/assets/*</pattern>
		<pattern>/master/employee/*</pattern>
		<pattern>/master/category/*</pattern>
		<pattern>/master/role/*</pattern>
		<pattern>/master/outlet/*</pattern>
		<pattern>/master/supplier/*</pattern>
		<pattern>/master/item/*</pattern>
		<pattern>/purchase/request/*</pattern>
		<pattern>/purchase/order/*</pattern>
		<pattern>/transaksi/adjustment/*</pattern>
	</excludes>

	<decorator name="login" page="login.jsp">
		<pattern>/login.html</pattern>
		<pattern>/select-outlet.html</pattern>
	</decorator>
	
	<decorator name="main" page="main.jsp">
		<pattern>/*</pattern>
	</decorator>

</decorators>